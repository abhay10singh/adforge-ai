# 1. Use a lightweight Python base
FROM python:3.10-slim

# 2. Set the working directory
WORKDIR /app

# 3. Install system libraries (FIXED)
# We replaced 'libgl1-mesa-glx' with 'libgl1' which works on the new Debian
RUN apt-get update && apt-get install -y \
    libgl1 \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

# 4. Redirect Cache folders to /tmp (Writable)
ENV XDG_CACHE_HOME=/tmp/.cache
ENV U2NET_HOME=/tmp/.u2net
ENV NUMBA_CACHE_DIR=/tmp

# 5. Create folders with permissions
RUN mkdir -p /tmp/.cache && chmod 777 /tmp/.cache
RUN mkdir -p /tmp/.u2net && chmod 777 /tmp/.u2net

# 6. Install Python Deps
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 7. Copy Code
COPY . .

# 8. Run Server on port 7860
CMD ["uvicorn", "server:app", "--host", "0.0.0.0", "--port", "7860"]